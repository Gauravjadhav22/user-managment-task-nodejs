generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model User {
  id        Int    @id @default(autoincrement())
  firstName String
  lastName  String
  email     String @unique
  phone     String
  avatar    String?
  password  String?
  disable   Boolean @default(false)
  role      Role  @default(USER)
}

enum Role {
  USER
  ADMIN
}